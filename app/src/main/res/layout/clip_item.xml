<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">

    <ImageView
            android:id="@+id/myImageView"
            android:layout_width="match_parent"
            android:layout_height="169dp"
            android:background="@color/tabTextColor"
            android:scaleType="centerInside"
            android:padding="1dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintTop_toTopOf="parent"/>

    <ImageView  android:id="@+id/youtube_icon"
                android:src="@mipmap/youtube_icon"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintEnd_toEndOf="@+id/myImageView"
                app:layout_constraintBottom_toBottomOf="@+id/myImageView"/>

</android.support.constraint.ConstraintLayout>